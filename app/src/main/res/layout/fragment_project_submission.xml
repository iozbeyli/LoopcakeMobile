<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.loopcake.loopcakemobile.ProjectSubmissionFragment"
    android:padding="10dp">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/label_last_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Last Activity: "
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="16sp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/download_report"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:text="Download Report"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/upload_report"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:text="Upload Report"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_margin="10dp"/>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#000000" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingBottom="20dp"
        android:paddingTop="20dp">

        <include layout="@layout/included_list" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/attach_repo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:text="Attach Repo"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/attach_file"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:text="Attach File"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_margin="10dp"/>
    </LinearLayout>

</LinearLayout>
